<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.obao.entity">
    <class name="Collect" table="t_collect" >
        <id name="id" type="integer">
            <column name="collect_id" />
            <generator class="increment" />
        </id>
    <property name="addDate" type="date" >
        <column name="add_date"/>
    </property>
        <!--多个收藏对应一个用户-->
        <many-to-one name="user" column="user_id" class="User" lazy="false"/>
        <!--多个收藏对应同一商品-->
        <many-to-one name="product" column="product_id" class="com.obao.entity.Product" lazy="false"/>
    </class>
</hibernate-mapping>
